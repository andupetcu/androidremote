<?xml version="1.0" encoding="utf-8"?>
<device-admin xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-policies>
        <!-- Lock the screen -->
        <force-lock />
        <!-- Wipe device data (factory reset) -->
        <wipe-data />
        <!-- Set password requirements -->
        <limit-password />
        <!-- Monitor password attempts -->
        <watch-login />
        <!-- Reset password -->
        <reset-password />
        <!-- Disable camera (MDM feature) -->
        <disable-camera />
        <!-- Disable keyguard features -->
        <disable-keyguard-features />
    </uses-policies>
</device-admin>
