<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Status Icon - changes based on connection state -->
    <ImageView
        android:id="@+id/imgConnectionStatus"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@android:drawable/presence_offline"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />

    <!-- Connection Status -->
    <TextView
        android:id="@+id/txtConnectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connecting..."
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="4dp" />

    <!-- Last Sync Time -->
    <TextView
        android:id="@+id/txtLastSync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last sync: Never"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="24dp" />

    <!-- Server Info Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/txtServerUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not configured"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device ID"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/txtDeviceId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not enrolled"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface"
                android:textIsSelectable="true" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Error Message (hidden by default) -->
    <TextView
        android:id="@+id/txtErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="?attr/colorError"
        android:gravity="center"
        android:visibility="gone"
        android:padding="8dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="16dp" />

    <!-- Sync Now Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSyncNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync Now"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Info text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This device is enrolled in MDM.\nRemote sessions are initiated from the admin dashboard."
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Reset Config Button -->
    <Button
        android:id="@+id/btnResetConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_config"
        style="@style/Widget.Material3.Button.TextButton"
        android:textColor="?attr/colorError" />

</LinearLayout>
